<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pharma_agence_tree" model="ir.ui.view">
        <field name="name">pharma.agence.tree</field>
        <field name="model">pharma.agence</field>
        <field name="arch" type="xml">
            <tree string="Agences de promotion" decoration-muted="(not active)">
                <!-- Bouton d'import pour les agences -->
                <field name="code" string="Code"/>
                <field name="name" string="Nom de l'agence"/>
                <field name="region_id"/>
                <field name="department_id"/>
                <field name="commune_id"/>
                <field name="numero_telephone"/>
                <field name="annee_ouverture"/>
                <field name="numero_agrement"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_pharma_agence_search" model="ir.ui.view">
        <field name="name">pharma.agence.search</field>
        <field name="model">pharma.agence</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Nom de l'agence"/>
                <field name="region_id"/>
                <field name="department_id"/>
                <field name="commune_id"/>
                <field name="numero_agrement"/>
                <filter string="Actives" name="active_true" domain="[('active', '=', True)]"/>
                <filter string="Archiv√©es" name="active_false" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="view_pharma_agence_form" model="ir.ui.view">
        <field name="name">pharma.agence.form</field>
        <field name="model">pharma.agence</field>
        <field name="arch" type="xml">
            <form string="Agence de promotion" class="pharma-officine-form">
                <sheet class="pharma-officine-sheet">
                    <notebook class="pharma-tabs">
                        <page string="Profil" name="profil">
                            <div class="pharma-form-header">
                                <div class="pharma-title-row">
                                    <div class="pharma-title-main">
                                        <field name="name" placeholder="Nom de l'agence"/>
                                    </div>
                                    <div class="pharma-title-photo">
                                        <field name="photo" widget="image" class="o_field_image_small"/>
                                    </div>
                                </div>
                            </div>
                            <div class="pharma-page-header">
                                <span class="pharma-page-title">Profil administratif</span>
                                <span class="pharma-page-caption">R√©sum√© de l'identit√© et de la situation r√©glementaire</span>
                            </div>
                            <group col="2" class="pharma-grid pharma-grid-two-cols">
                                <group string="Coordonn√©es principales" class="pharma-card">
                                    <field name="code" readonly="1"/>
                                    <field name="numero_telephone"/>
                                    <field name="annee_ouverture"/>
                                    <field name="date_agrement"/>
                                    <field name="numero_agrement" string="Num√©ro de l'agr√©ment"/>
                                </group>
                                <group string="Zone de couverture" class="pharma-card">
                                    <field name="region_id" options="{'no_open': True}"/>
                                    <field name="department_id" domain="[('region_id', '=', region_id)]" options="{'no_open': True}"/>
                                    <field name="commune_id" domain="[('department_id', '=', department_id)]" options="{'no_open': True}"/>
                                    <field name="quartier"/>
                                </group>
                            </group>
                        </page>

                        <page string="Coordonn√©es" name="coordonnees">
                            <div class="pharma-page-header">
                                <span class="pharma-page-title">Adresse &amp; g√©olocalisation</span>
                                <span class="pharma-page-caption">Adresse de l'agence et informations de localisation</span>
                            </div>
                            <group col="1" class="pharma-grid pharma-grid-two-cols">
                                <group string="Adresse" class="pharma-card">
                                    <field name="adresse"/>
                                    <field name="latitude"/>
                                    <field name="longitude"/>
                                    <field name="points_geolocalisation" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="√âquipe" name="equipe">
                            <div class="pharma-page-header">
                                <span class="pharma-page-title">√âquipe &amp; comp√©tences</span>
                                <span class="pharma-page-caption">Responsable de l'agence et effectifs</span>
                            </div>
                            <group col="2" class="pharma-grid pharma-grid-two-cols">
                                <group string="Responsable" class="pharma-card">
                                    <field name="pharmacien_responsable"/>
                                    <field name="laboratoire_represente"/>
                                </group>
                                <group string="Effectifs" class="pharma-card">
                                    <field name="nombre_employe_pharmacien"/>
                                    <field name="nombre_employe_non_pharmacien"/>
                                </group>
                            </group>
                        </page>

                        <page string="Indicateurs" name="indicateurs">
                            <div class="pharma-page-header">
                                <span class="pharma-page-title">Indicateurs financiers &amp; logistiques</span>
                                <span class="pharma-page-caption">Suivi du chiffre d'affaires (FCFA) et informations compl√©mentaires</span>
                            </div>
                            <group col="2" class="pharma-grid pharma-grid-two-cols">
                                <group string="Finance" class="pharma-card">
                                    <field name="chiffre_affaire" string="Chiffre d'affaires (FCFA)"/>
                                </group>
                                <group string="Observations" class="pharma-card">
                                    <field name="observations" widget="text" placeholder="Informations compl√©mentaires, remarques"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pharma_agence" model="ir.actions.act_window">
        <field name="name">Agences de promotion</field>
        <field name="res_model">pharma.agence</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_pharma_agence_search"/>
    </record>

    <record id="view_pharma_agence_kanban" model="ir.ui.view">
        <field name="name">pharma.agence.kanban</field>
        <field name="model">pharma.agence</field>
        <field name="arch" type="xml">
            <kanban default_group_by="region_id">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="text-muted">
                                    <field name="commune_id"/> ¬∑ <field name="region_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_primary_bottom">
                                <span t-if="record.numero_telephone.raw_value">‚òéÔ∏è <field name="numero_telephone"/></span>
                                <span t-if="record.pharmacien_responsable.raw_value">üë§ <field name="pharmacien_responsable"/></span>
                                <span t-if="record.numero_agrement.raw_value">üìÑ <field name="numero_agrement"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
