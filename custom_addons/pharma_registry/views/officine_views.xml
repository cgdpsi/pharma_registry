<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pharma_officine_tree" model="ir.ui.view">
        <field name="name">pharma.officine.tree</field>
        <field name="model">pharma.officine</field>
        <field name="arch" type="xml">
            <tree string="Officines" decoration-muted="(not active)">                
                <field name="code" string="Code"/>
                <field name="name" string="Nom de l'officine"/>
                <field name="region_id"/>
                <field name="department_id"/>
                <field name="commune_id"/>
                <field name="quartier"/>
                <field name="numero_telephone"/>
                <field name="annee_exploitation"/>
                <field name="statut"/>
                <field name="active" invisible="1"/>
               
            </tree>
        </field>
    </record>

    <record id="view_pharma_officine_search" model="ir.ui.view">
        <field name="name">pharma.officine.search</field>
        <field name="model">pharma.officine</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Nom de l'officine"/>
                <field name="region_id"/>
                <field name="department_id"/>
                <field name="commune_id"/>
                <field name="statut"/>
                <filter string="Actives" name="active_true" domain="[('active', '=', True)]"/>
                <filter string="Archiv√©es" name="active_false" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="view_pharma_officine_form" model="ir.ui.view">
    
        <field name="name">pharma.officine.form</field>
        <field name="model">pharma.officine</field>
        <field name="arch" type="xml">
            <form string="Officine" class="pharma-officine-form">
                <sheet class="pharma-officine-sheet">
                    <!-- Notebook des sections m√©tier : profil, coordonn√©es, √©quipe, indicateurs -->
                    <notebook class="pharma-tabs">
                        <page string="Profil" name="profil">
                            <div class="pharma-form-header">
                                <div class="pharma-title-row">
                                    <div class="pharma-title-main">
                                        <field name="name" placeholder="Nom de l'officine"/>
                                    </div>
                                    <div class="pharma-title-photo">
                                        <field name="photo" widget="image" class="o_field_image_small"/>
                                    </div>
                                </div>
                            </div>
                            <div class="pharma-page-header">
                                <span class="pharma-page-title">Profil Officine </span>
                                <span class="pharma-page-caption">Donn√©es d'identification</span>
                            </div>
                            <!-- Informations principales vs localisation rapide, dispos√©es en deux colonnes -->
                            <!-- Adresse compl√®te / informations compl√©mentaires -->
                            <group col="2" class="pharma-grid pharma-grid-two-cols">
                                <group class="pharma-card" string="Informations G√©n√©rale">
                                    <field name="code" readonly="1"/>
                                    <field name="numero_telephone"/>
                                    <field name="statut"/>
                                    <field name="annee_creation"/>
                                    <field name="annee_exploitation"/>
                                </group>
                                <group string="Localisation" class="pharma-card">
                                    <field name="region_id" options="{'no_open': True}"/>
                                    <field name="department_id" domain="[('region_id', '=', region_id)]" options="{'no_open': True}"/>
                                    <field name="commune_id" domain="[('department_id', '=', department_id)]" options="{'no_open': True}"/>
                                    <field name="quartier"/>
                                </group>
                            </group>
                        </page>

                        <page string="Coordonn√©es" name="coordonnees">
                            <div class="pharma-page-header">
                                <span class="pharma-page-title">Adresse &amp; g√©olocalisationss</span>
                                <span class="pharma-page-caption">Adresse exacte, g√©olocalisation </span>
                            </div>
                            <!-- Bloc responsable vs. effectifs -->
                            <group col="1" class="pharma-grid pharma-grid-two-cols">
                                <group string="Adresse compl√®te" class="pharma-card">
                                    <field name="adresse"/>
                                    <field name="latitude"/>
                                    <field name="longitude"/>
                                    <field name="points_geolocalisation" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="√âquipe" name="equipe">
                            <div class="pharma-page-header">
                                <span class="pharma-page-title">√âquipe</span>
                                <span class="pharma-page-caption">Responsable de l'officine &amp; ressources humaines  </span>
                            </div>
                            <!-- Indicateurs financiers et observations internes -->
                            <group col="2" class="pharma-grid pharma-grid-two-cols">
                                <group string="Responsable" class="pharma-card">
                                    <field name="titulaire_nom"/>
                                    <field name="numero_ordre"/>
                                    <field name="sexe_titulaire"/>
                                    <field name="tranche_age"/>
                                </group>
                                <group string="Effectifs" class="pharma-card">
                                    <field name="nombre_assistants"/>
                                    <field name="nombre_employe_pharmacien"/>
                                    <field name="nombre_employe_non_pharmacien"/>
                                    <field name="nombre_agent_securite"/>
                                    <field name="nombre_agent_hygiene"/>
                                </group>
                            </group>
                        </page>

                        <page string="Indicateurs" name="indicateurs">
                            <div class="pharma-page-header">
                                <span class="pharma-page-title">Indicateurs financiers, logistiques &amp; observations internes</span>
                                <span class="pharma-page-caption">Suivi du chiffre d'affaires et des moyens ogistiques</span>
                            </div>
                            <group col="2" class="pharma-grid pharma-grid-two-cols">
                                <group string="indicateurs" class="pharma-card">
                                    <field name="chiffre_affaire" string="Chiffre d'affaires (FCFA)"/>
                                    <field name="nombre_vehicule" string="V√©hicules disponibles"/>
                                </group>
                                <group string="Observations" class="pharma-card">
                                    <field name="observations" widget="text" placeholder="Informations compl√©mentaires, remarques"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pharma_officine" model="ir.actions.act_window">
        <field name="name">Officines</field>
        <field name="res_model">pharma.officine</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_pharma_officine_search"/>
    </record>

    <record id="view_pharma_officine_kanban" model="ir.ui.view">
        <field name="name">pharma.officine.kanban</field>
        <field name="model">pharma.officine</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <kanban default_group_by="region_id">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click pharma-kanban-card">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title" >
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted">
                                    <field name="commune_id"/>.<field name="region_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_primary_bottom">
                                <div t-if="record.numero_telephone.raw_value">‚òéÔ∏è <field name="numero_telephone"/></div>
                                <div t-if="record.titulaire_nom.raw_value">üë§ <field name="titulaire_nom"/></div>
                                <div t-if="record.statut.raw_value">üè∑Ô∏è <field name="statut"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
