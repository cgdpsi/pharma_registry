<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_geo_wizard" model="ir.ui.view">
        <field name="name">pharma.import.geo.wizard.form</field>
        <field name="model">pharma.import.geo.wizard</field>
        <field name="arch" type="xml">
            <form string="Import des régions / départements / communes">
                <sheet>
                    <group>
                        <field name="file_data" filename="filename" string="Fichier Excel / CSV"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <footer>
                        <button name="action_import" type="object" string="Importer" class="btn-primary"/>
                        <button string="Annuler" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_import_geo_wizard" model="ir.actions.act_window">
        <field name="name">Import géographique</field>
        <field name="res_model">pharma.import.geo.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
